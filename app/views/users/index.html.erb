<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>Users</h1>
        <%= will_paginate @users %>
      </div>

      <table class="table table-hover">
        <thead>
        <tr>
          <th>User Email</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>  <%= user.email %> </td>
            <td class="btn-light btn-primary text-white"><%= link_to 'Show', user %></td>
            <td class="btn-light btn-warning text-white"><%= link_to 'Edit', edit_user_path(user) %></td>
            <td class="btn-light btn-danger text-white"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>

        </tbody>
      </table>

      <br>
      <div class="panel-footer">

        <%= link_to 'New User', new_user_registration_path, class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>
